
//% color="#DDA977"
//% icon="\uf295"
namespace Randomizer {

    /**
            * A seventy-five percent chance event.
            */
    //% block="if 75 percent chance do"
    export function seventyFivePercentChance(handler: () => void) {
        if (Math.percentChance(75)) {
            handler()
        }
    }


    /**
         * A fifty percent chance event.
         */
    //% block="if 50 percent chance do"
    export function fiftyPercentChance(handler: () => void) {
        if (Math.percentChance(50)) {
            handler()
        }
    }

    /**
            * A twenty-five percent chance event.
            */
    //% block="if 25 percent chance do"
    export function twentyFivePercentChance(handler: () => void) {
        if (Math.percentChance(25)) {
            handler()
        }
    }


}
